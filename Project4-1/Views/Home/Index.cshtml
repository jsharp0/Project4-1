@model List<ContactModel>

@{
    ViewData["Title"] = "Home Page";
}

<a href="/contact/add" class="link-primary">Add Contact</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Phone</th>
            <th scope="col">Email</th>
            <th scope="col">Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
        <tr>
            <td scope="row"><a asp-controller="Contact" asp-action="Details" 
                               asp-route-id="@contact.ID" asp-route-slug="@contact.nameSlug" class="link-primary">
                @contact.firstName</a></td>
            <td>
                <a asp-controller="Contact" asp-action="Details" 
                               asp-route-id="@contact.ID" asp-route-slug="@contact.nameSlug" class="link-primary">@contact.lastName</a>
            </td>
            <td>@contact.phone</td>
            <td>@contact.email</td>
            @if (@contact.category != null)
            {
                <td>@contact.category.name</td>

            }
        </tr>
        }

    </tbody>
</table>